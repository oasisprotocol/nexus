[general]
verbosity = 2
ignore-merge-commits=true
ignore-fixup-commits=false
ignore-squash-commits=false
ignore=body-is-missing

[title-max-length]
line-length=80

[title-match-regex]
regex=^(breaks|fix|feat|other|deps)(\(\w*\))?:.*$

[body-max-line-length]
line-length=80

[body-min-length]
min-length=20
